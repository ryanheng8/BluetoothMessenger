<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.LoginFragment">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="250dp"
        android:text="Home Page"
        android:textSize="40sp" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Profile"
        android:textSize="20dp"
        android:layout_marginStart="208dp"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/connectionButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:text="Connect" />

        <Button
            android:id="@+id/drawingsButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:text="All Drawings" />

        <Button
            android:id="@+id/drawingBoardButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:text="New Drawing" />

        <Button
            android:id="@+id/createChatButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:text="New Chat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/foundDevicesContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chatroom wtih Janet"
                android:textSize="24sp" />

            <Button
                android:id="@+id/viewButton"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:text="view"
                android:textSize="24dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>